page {
  box-sizing: border-box;
  background: #f5f5f5;
}

.home-page-header {
  background: linear-gradient(rgb(255, 255, 255), #f5f5f5);
}

.home-page-header {
  display: block;
  padding: 0 24rpx;
}

.home-page-header .t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
  margin-bottom: 30rpx;
}

.home-page-header .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.popular-header {
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: -100rpx;
}

.popular-item {
  padding-top: 30rpx;
  padding-left: 50rpx;
  padding-bottom: 30rpx;
}

.popular-item:last-child {
  padding-bottom: 0;
}

.popular-item .margin-16:not(:last-child) {
  margin-right: 32rpx;
}

.margin-16 {
  margin-bottom: 28rpx;
}