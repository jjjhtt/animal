page {
  box-sizing: border-box;
  background: #f5f5f5;
}

.help-page-header {
  background: rgb(255,255,255);
}

.help-page-container {
  background: #f5f5f5;
}

.help-page-container,
.help-page-header {
  display: block;
}

.help-page-header .t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
  margin: 0 24rpx;
  margin-bottom: 16rpx;
}

.help-page-header .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.help-page-container .tweets-list-container {
  background: #f5f5f5 !important;
  padding: 0 24rpx;
}

.noTweet {
  width: 100%;
  text-align: center;
  font-size: large;
  font-weight: bold;
  margin: 10px;
  margin-top: 30px;
}
