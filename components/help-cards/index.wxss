.help-cards {
  display: flex;
}

.help-cards__right {
  height: 100%;
  flex: auto;
  width: 0;
  position: relative;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  background-color: white;
}

.flex {
  display: flex;
}

.help-cards-normal-item-container {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding-top: 28rpx;
  margin-top: -24rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.help-cards-normal-item-container-item {
  height: 150rpx;
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  width: 100%;
  border: 1rpx solid black;
  background-color: white;
}

.help-cards-normal-item-container-item-title {
  font-size: 35rpx;
  color: #666666;
  margin-top: 10rpx;
  line-height: 30rpx;
}

.comment-container {
  display: flex;
  flex-direction:row-reverse;
  align-content: flex-start;
  padding: 50rpx 10rpx 10rpx 10rpx;
}

.comment {
  margin-right: 10rpx;
}

.commentnum {
  margin-right: 0;
}
